  <div class="example">
    <div class="rendered">
      <div class="form-group">
        <label>Count</label>
        <Input @type="number" @value={{this.autoCount}} class="form-control" placeholder="Count" />
      </div>
      <div class="form-group">
        <label>
          <Input @type="checkbox" @checked={{this.hidden}} />
          Hide
        </label>
      </div>
      <div class="form-group">
        <label>
          <Input @type="checkbox" @checked={{this.autoHide}} />
          Auto Hide
        </label>
      </div>
      <PaginationPager @count={{this.autoCount}} @current={{1}} @autoHide={{this.autoHide}} @hide={{this.hidden}} />
    </div>
    <pre>&lt;PaginationPager
    @count=&#123;&#123;this.autoCount&#125;&#125;
    @current=&#123;&#123;1&#125;&#125;
    @hide=&#123;&#123;this.hidden&#125;&#125;
    @autoHide=&#123;&#123;this.autoHide&#125;&#125;
/&gt;</pre>
  </div>

  <div class="example">
    <div class="rendered">
      <div class="form-group">
        <label>Count</label>
        <Input @type="number" @value={{this.dynamicCount}} class="form-control" placeholder="Count" />
      </div>
      <div class="form-group">
        <label>Current</label>
        <Input @type="number" @value={{this.dynamicCurrent}} class="form-control" placeholder="Current" />
      </div>

      <PaginationPager @count={{this.dynamicCount}} @current={{this.dynamicCurrent}} />
    </div>
    <pre>&lt;PaginationPager
    @count=&#123;&#123;this.dynamicCount&#125;&#125;
    @current=&#123;&#123;this.dynamicCurrent&#125;&#125;
/&gt;</pre>
  </div>

  <div class="example">
    <div class="rendered"><PaginationPager @count={{this.dynamicCount}} @current={{this.dynamicCurrent}} @change={{action "pageChanged"}} @urlTemplate="localhost:4200/pagination-pager/?page={current}" /></div>
    <pre>&lt;PaginationPager
    @count=&#123;&#123;this.dynamicCount&#125;&#125;
    @current=&#123;&#123;this.dynamicCurrent&#125;&#125;
    @change=&#123;&#123;this.pageChanged&#125;&#125;
    @urlTemplate='localhost:4200/pagination-pager/?page={current}'
/&gt;</pre>
  </div>

