{{page-title 'Dummy'}}

<div class='container'>
  <div>
    <nav>
      <ul class='nav nav-pills pull-right'>
        <li>
          <a href='https://github.com/knownasilya/pagination-pager'>
            Github
          </a>
        </li>
      </ul>
    </nav>
    <h2>
      pagination-pager
    </h2>
    <p class='text-muted lead'>
      <small>
        Ember.js Component for Bootstrap 3 pagination & pager components
      </small>
    </p>
  </div>
  <br />
  <br />

  {{outlet}}

  <div class='example'>
    <div class='rendered'>
      <PaginationPager
        @count={{5}}
        @current={{2}}
        @pager={{true}}
        @pagerNext='New'
        @pagerPrevious='Old'
      />
    </div>
    <pre>
      &lt;PaginationPager
    @count={{5}}
    @current={{2}}
    @pager={{true}}
    @pagerNext='New'
    @pagerPrevious='Old'
/&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <PaginationPager
        @count={{5}}
        @current={{1}}
        @pager={{true}}
        @pagerSpread={{true}}
      />
    </div>
    <pre>
      &lt;PaginationPager
    @count={{5}}
    @current={{1}}
    @pager={{true}}
    @pagerSpread={{true}}
/&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <PaginationPager @count={{5}} @current={{2}} />
    </div>
    <pre>
      &lt;PaginationPager
    @count={{5}}
    @current={{2}}
/&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <PaginationPager @count={{5}} @current={{1}} />
    </div>
    <pre>
      &lt;PaginationPager
    @count={{5}}
    @current={{1}}
/&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <div class='form-group'>
        <label>
          Count
        </label>
        <Input
          @type='number'
          @value={{this.autoCount}}
          class='form-control'
          placeholder='Count'
        />
      </div>
      <div class='form-group'>
        <label>
          <Input @type='checkbox' @checked={{this.hidden}} />
          Hide
        </label>
      </div>
      <div class='form-group'>
        <label>
          <Input @type='checkbox' @checked={{this.autoHide}} />
          Auto Hide
        </label>
      </div>
      <PaginationPager
        @count={{this.autoCount}}
        @current={{1}}
        @autoHide={{this.autoHide}}
        @hide={{this.hidden}}
      />
    </div>
    <pre>
      &lt;PaginationPager
    @count={{this.autoCount}}
    @current={{1}}
    @hide={{this.hidden}}
    @autoHide={{this.autoHide}}
/&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <div class='form-group'>
        <label>
          Count
        </label>
        <Input
          @type='number'
          @value={{this.dynamicCount}}
          class='form-control'
          placeholder='Count'
        />
      </div>
      <div class='form-group'>
        <label>
          Current
        </label>
        <Input
          @type='number'
          @value={{this.dynamicCurrent}}
          class='form-control'
          placeholder='Current'
        />
      </div>

      <PaginationPager
        @count={{this.dynamicCount}}
        @current={{this.dynamicCurrent}}
      />
    </div>
    <pre>
      &lt;PaginationPager
    @count={{this.dynamicCount}}
    @current={{this.dynamicCurrent}}
/&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <PaginationPager
        @count={{this.dynamicCount}}
        @current={{this.dynamicCurrent}}
        @change={{action 'pageChanged'}}
        @urlTemplate='localhost:4200/pagination-pager/?page={current}'
      />
    </div>
    <pre>
      &lt;PaginationPager
    @count={{this.dynamicCount}}
    @current={{this.dynamicCurrent}}
    @change={{this.pageChanged}}
    @urlTemplate='localhost:4200/pagination-pager/?page={current}'
/&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <PaginationPager @count={{5}} @current={{5}} @size='lg' />
    </div>
    <pre>
      &lt;PaginationPager
    @count={{5}}
    @current={{5}}
    @size='lg'
/&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <PaginationPager
        @count={{5}}
        @current={{5}}
        @size='lg'
        @paginationNext='next'
        @paginationPrevious='previous'
      />
    </div>
    <pre>
      &lt;PaginationPager
    @count={{5}}
    @current={{5}}
    @size='lg'
    @paginationNext='next'
    @paginationPrevious='previous'
/&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <PaginationPager @count={{1}} @current={{1}} />
    </div>
    <pre>
      &lt;PaginationPager
    @count={{1}}
    @current={{1}}
/&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <PaginationPager @count={{1}} @current={{1}} @hide={{true}} />
    </div>
    <pre>
      &lt;PaginationPager
    @count={{1}}
    @current={{1}}
    @hide={{true}}
/&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <PaginationPager
        @count={{5}}
        @current={{2}}
        @change={{action 'pageChanged'}}
        @disabled={{true}}
      />
    </div>
    <pre>
      &lt;PaginationPager
    @count={{5}}
    @current={{2}}
    @change={{this.pageChanged}}
    @disabled={{true}}
/&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <PaginationPager
        @count={{1}}
        @current={{1}}
        @pager={{true}}
        @hide={{true}}
      />
    </div>
    <pre>
      &lt;PaginationPager
    @count={{1}}
    @current={{1}}
    @pager={{true}}
    @hide={{true}}
/&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <PaginationPager
        @count={{5}}
        @current={{2}}
        @pager={{true}}
        @disabled={{true}}
      />
    </div>
    <pre>
      &lt;PaginationPager
    @count={{5}}
    @current={{2}}
    @pager={{true}}
    @disabled={{true}}
/&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <PaginationPager @count={{5}} @current={{this.current}} @pager={{true}}>
        Page {{this.current}} of 5
      </PaginationPager>
    </div>
    <pre>
      &lt;PaginationPager @count={{5}} @current={{this.current}} @pager={{true}} /&gt;
    Page {{this.current}} of 5
&lt;/PaginationPager&gt;
    </pre>
  </div>

  <div class='example'>
    <div class='rendered'>
      <PaginationPager
        @count={{5}}
        @current={{this.current}}
        @pager={{true}}
        @pagerPrevious="<span class='glyphicon glyphicon-play gly-flip-horizontal'></span>"
        @pagerNext="<span class='glyphicon glyphicon-play'></span>"
        @pagerFirst="<span class='glyphicon glyphicon-step-backward'></span>"
        @pagerLast="<span class='glyphicon glyphicon-step-forward'></span>"
      >
        Page {{this.current}} of 5
      </PaginationPager>
    </div>
    <pre>
      &lt;PaginationPager
      @count={{5}}
      @current={{this.current}}
      @pager={{true}}
      @pagerPrevious='&lt;span class="glyphicon glyphicon-play gly-flip-horizontal"&gt;&lt;/span&gt;'
      @pagerNext='&lt;span class="glyphicon glyphicon-play"&gt;&lt;/span&gt;'
      @pagerFirst='&lt;span class="glyphicon glyphicon-step-backward"&gt;&lt;/span&gt;'
      @pagerLast='&lt;span class="glyphicon glyphicon-step-forward"&gt;&lt;/span&gt;'&gt;
    Page {{this.current}} of 5
&lt;/PaginationPager&gt;
    </pre>
  </div>
</div>