  <br>

  {{outlet}}

  <div class="example">
    <div class="rendered"><PaginationPager @count={{5}} @current={{2}} @pager={{true}} @pagerNext="New" @pagerPrevious="Old" /></div>
    <pre>&lt;PaginationPager
    @count=&#123;&#123;5&#125;&#125;
    @current=&#123;&#123;2&#125;&#125;
    @pager=&#123;&#123;true&#125;&#125;
    @pagerNext='New'
    @pagerPrevious='Old'
/&gt;</pre>
  </div>

  <div class="example">
    <div class="rendered"><PaginationPager @count={{5}} @current={{1}} @pager={{true}} @pagerSpread={{true}} /></div>
